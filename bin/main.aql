module main; 

create dictionary reviews
from file 'MovieReviews/Pos/cv000_29590.txt';

create view testView as
extract dictionary 'reviews'
on D.text as review
from Document D;

create view testView2 as
select t.review, 
0.2 as threshold, 
'good good good' as goodWords, 
'bad bad bad' as badWords
from testView t;
